<Alloy>
    <Window id="index">
        <LeftNavButton platform="mobileweb" formFactor="handheld">
            <Button class="reportChooserButton" onClick="toggleReportChooserVisibility"/>
        </LeftNavButton>
        <LeftNavButton platform="ios" formFactor="handheld">
            <Button class="reportChooserButton" onClick="toggleReportChooserVisibility"/>
        </LeftNavButton>
        
        <Require src="loadingindicator" id="loadingindicator"/>

        <View id="content">

            <TableView id="liveTable" onClick="doOpenVisitor">
                <HeaderPullView platform="ios">
                    <Require src="pulltorefresh" id="pullToRefresh" onRefresh="doRefresh"/>
                </HeaderPullView>
            </TableView>
        </View>

        <Require src="countdowntimer" id="countdown"/>
    </Window>
</Alloy>