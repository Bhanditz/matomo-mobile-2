<Alloy>
    <Collection src="appAccounts"/>
    
    <Window class="container" id="index" onClose="onClose" onOpen="onOpen">
        <LeftNavButton platform="mobileweb" formFactor="handheld">
            <Button class="reportChooserButton" onClick="toggleReportChooserVisibility"/>
        </LeftNavButton>
        <LeftNavButton platform="ios" formFactor="handheld">
            <Button class="reportChooserButton" onClick="toggleReportChooserVisibility"/>
        </LeftNavButton>
        
        <RightNavButton platform="ios,mobileweb">
            <Button id="addAccountButton" onClick="doAddAccount"/>
        </RightNavButton>
        <Menu id="menu" platform="android">
            <MenuItem id="menuItemAddAccount" onClick="doAddAccount" />
        </Menu>
        <TableView id="accounts" onDelete="doDeleteAccount" onLongpress="doSelectAction" onClick="doSelectAccount" dataCollection="appAccounts">
            <FooterView platform="android,mobileweb">
                <View class="footer"><Label id="howToDeleteHint"/></View>
            </FooterView>
            <TableViewRow title="{name}" accountId="{id}"/>
        </TableView>
    </Window>
</Alloy>