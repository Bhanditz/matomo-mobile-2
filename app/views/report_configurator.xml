<Alloy>
    <Collection src="piwikProcessedReport" id="piwikProcessedReport" instance="true"/>

    <View id="index">
        <TableView id="configTable" dataTransform="transformWebsite" dataCollection="$.piwikProcessedReport" onClick="selectWebsite">
            <HeaderView>
                <View class="headerView">
                    <View class="websitePicker">
                        <Require src="website_picker" onSelected="hideRightSidebar"/>
                    </View>
                    <View class="datePicker">
                        <Require src="date_picker" onSelected="hideRightSidebar"/>
                    </View>
                    <View class="separator"/>
                    <View class="siteHeader">
                        <Label id="siteTitle" />
                    </View>
                </View>
            </HeaderView>
            <TableViewRow class="websiteRow" idsite="{idsite}" rightImage="{rightImage}" modelid="{id}" title="{title}"/>
        </TableView>
    </View>
</Alloy>