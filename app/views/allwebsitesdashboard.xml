<Alloy>
    <Collection src="piwikProcessedReport"/>
    <Window title="Dashboard" id="index">
        <RightNavButton platform="ios">
        	<ButtonBar onClick="doChooseAccount" id="windowButtonBar">
        		<Labels id="windowButtonBar">
        			<Label id="settingsButton" image="ic_action_settings.png" width="32"/>
        			<Label id="accountsButton" image="ic_action_accounts.png" width="32"/>
        		</Labels>
        	</ButtonBar>
        </RightNavButton>

        <View id="loading"><Label>Loading</Label></View>
        <View id="content" class="container">
            <SearchBar id="searchBar"/>
            <Require src="reportgraph" id="reportGraphCtrl"/>
            <View class="space"></View>
            <View class="shadow"></View>
            <TableView class="websitesTableView" dataCollection="piwikProcessedReport" onClick="doSelectWebsite">
                <TableViewRow id="reportRowsContainer">
                    <Label text="{label}" cid="{cid}"></Label>
                </TableViewRow>
            </TableView>
        </View>
    </Window>
</Alloy>