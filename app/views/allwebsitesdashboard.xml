<Alloy>
    <Collection src="piwikProcessedReport"/>
    <Window id="index">
        <RightNavButton platform="ios,mobileweb">
            <Button id="accountsButton" onClick="doChooseAccount" image="ic_action_accounts.png" width="32"/>
        </RightNavButton>

        <View id="loading"><Label id="loadingLabel"></Label></View>
        
        <View id="content" class="container">
            <SearchBar id="searchBar" onReturn="doSearchWebsite" onCancel="doCancelSearchWebsite" platform="android,ios"/>
            <Require src="reportgraph" id="reportGraphCtrl"/>
            <View class="space"></View>
            <View class="shadow"></View>
            <TableView class="websitesTableView" dataCollection="piwikProcessedReport" onClick="doSelectWebsite">
                <TableViewRow title="{label}" modelid="{id}">
                </TableViewRow>
            </TableView>
        </View>
    </Window>
</Alloy>