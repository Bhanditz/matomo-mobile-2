<Alloy>
	<Window class="container">
		<ScrollView id="mainView">
		    <View id="headerView">
		    	<ImageView id="logoImage"/>
		    </View>
			<View id="formView">
	    		<TextField id="url" class="textfield"/>
	    		<TextField id="username" class="textfield"/>
	    		<TextField id="password" class="textfield"/>
	    		<Button id="loginbutton" onClick="login">Login</Button>
			</View>
	        <View id="footerView">
	            <Label id="tryit">Try it!</Label>
	            <Label id="faq">FAQ</Label>
	        </View>
        </ScrollView>
	</Window>
</Alloy>