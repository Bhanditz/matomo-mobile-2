<Alloy>
	<Window class="container">
	    <ScrollView>
    	    <ImageView id="imageview" class="test"/>
    		<View id="loginContainer">
        		<TextField id="url" class="textfield" onReturn="onUrlReturn"/>
        		<TextField id="username" class="textfield" onReturn="onUsernameReturn"/>
        		<TextField id="password" class="textfield" onReturn="login"/>
        		<Button id="loginbutton" onClick="login">Login</Button>
    		</View>
            <View id="footerContainer">
                <Label id="tryit">Try it!</Label>
                <Label id="faq">FAQ</Label>
            </View>
        </ScrollView>
	</Window>
</Alloy>