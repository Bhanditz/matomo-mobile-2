<Alloy>
    <Window id="index" onClose="onClose" onOpen="onOpen">
        <Widget src="org.piwik.headerbar" 
                id="headerBar" 
                onBack="close"
                platform="android" />

        <TableView id="aboutPiwikTable">
            <TableViewRow id="website" onClick="openWebsite"/>
            <TableViewRow id="participate" onClick="participate"/>
            <TableViewRow id="license" onClick="openLicense"/>
            <TableViewRow id="follow" onClick="followPiwik" platform="ios,android"/>
            <TableViewRow id="sourceCode" onClick="openSourceCode" platform="ios,android"/>
        </TableView>
    </Window>
</Alloy>