<Alloy>
    <Window id="index">
        <NavigationGroup id="navgroup" platform="ios,mobileweb">
            <Window title=" " id="win1">
                <View id="loading"><Label>Loading</Label></View>
                <TableView id="content" class="container">
                    <TableViewRow>
                        <View class="menu">
                            <Require src="reportmenu" 
                                     onChooseReport="onChooseReport" 
                                     onChooseMetric="onChooseMetric" 
                                     onChooseDate="onChooseDate" 
                                     onFlatten="onFlatten" 
                                     id="reportMenuCtrl"/>
                            <View class="menuSeparatorShadow"/>
                            <Require src="reportinfo" id="reportInfoCtrl"/>
                        </View>
                    </TableViewRow>
                    <TableViewRow>
                        <Require src="reportgraph" id="reportGraphCtrl"/>
                    </TableViewRow>
                    <TableViewRow class="reportRowSeparator">
                        <View class="space"></View>
                        <View class="shadow"></View>
                    </TableViewRow>
                    <TableViewRow id="reportRowsContainer">
                    </TableViewRow>
                </TableView>
            </Window>
        </NavigationGroup>
	</Window>
</Alloy>