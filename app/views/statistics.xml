<Alloy>
    <Window title="" id="index">
        <LeftNavButton formFactor="handheld" platform="ios">
            <ButtonBar onClick="doChooseAccount">
                <Labels>
                    <Label image="ic_action_settings.png" width="32" />
                    <Label image="ic_action_accounts.png" width="32" />
                </Labels>
            </ButtonBar>
        </LeftNavButton>
        <LeftNavButton formFactor="handheld" platform="mobileweb">
            <Button image="ic_action_settings.png" width="32"/>
        </LeftNavButton>
        <RightNavButton formFactor="tablet" platform="ios">
            <ButtonBar onClick="doChooseAccount">
                <Labels>
                    <Label>Websites</Label>
                    <Label>Accounts</Label>
                    <Label>Settings</Label>
                </Labels>
            </ButtonBar>
        </RightNavButton>
        <RightNavButton formFactor="handheld" platform="ios">
            <ButtonBar platform="ios" onClick="doChooseWebsite">
                <Labels>
                    <Label image="ic_action_websites.png" width="32" />
                </Labels>
            </ButtonBar>
        </RightNavButton>
        <RightNavButton platform="mobileweb">
            <Button platform="mobileweb" image="ic_action_websites.png" onClick="doChooseWebsite" width="32"/>
        </RightNavButton>
        <Menu id="menu" platform="android">
            <MenuItem id="menuItemWebsite" onClick="doChooseWebsite" />
            <MenuItem id="menuItemAccount" onClick="doChooseAccount" />
            <MenuItem id="menuItemSetting" onClick="doChooseWebsite" />
        </Menu>
        <View id="loading"><Label>Loading</Label></View>

        <TableView id="content" class="container">
            <TableViewRow>
                <View class="menu">
                    <Require src="reportmenu" 
                             onChooseReport="doChooseReport" 
                             onChooseMetric="doChooseMetric" 
                             onChooseDate="doChooseDate" 
                             onFlatten="doFlatten" 
                             id="reportMenuCtrl"/>
                    <View class="menuSeparatorShadow"/>
                    <Require src="reportinfo" id="reportInfoCtrl"/>
                </View>
            </TableViewRow>
            <TableViewRow>
                <Require src="reportgraph" id="reportGraphCtrl"/>
            </TableViewRow>
            <TableViewRow class="reportRowSeparator">
                <View class="space"></View>
                <View class="shadow"></View>
            </TableViewRow>
            <TableViewRow id="reportRowsContainer">
            </TableViewRow>
        </TableView>
    </Window>
</Alloy>