<Alloy>
    <Window title="" id="index" onClose="onClose">
        
        <RightNavButton formFactor="tablet" platform="ios">
            <ButtonBar onClick="onClose">
                <Labels>
                    <Label>Websites</Label>
                    <Label>Accounts</Label>
                </Labels>
            </ButtonBar>
        </RightNavButton>

        <Menu id="menu" platform="android">
            <MenuItem id="menuItemWebsite" onClick="onClose" />
        </Menu>

        <Require src="loadingindicator" id="loadingindicator"/>

        <View id="content">
            
            <TableView id="reportTable" class="container">
                <HeaderPullView platform="ios">
                    <Require src="pulltorefresh" id="pullToRefresh" onRefresh="doRefresh"/>
                </HeaderPullView>
                <TableViewRow>
                    <Require src="graph" id="reportGraphCtrl"/>
                </TableViewRow>
                <TableViewRow>
                    <Require src="reportinfo" onMetricChosen="onMetricChosen" id="reportInfoCtrl" formFactor="handheld"/>
                </TableViewRow>
            </TableView>
        </View>
    </Window>
</Alloy>