<Alloy>
    <Collection src="piwikReports"/>

    <Window title="" id="index" onClose="onClose">
        
        <LeftNavButton platform="mobileweb" formFactor="handheld">
            <Button class="reportChooserButton" onClick="toggleReportChooserVisibility"/>
        </LeftNavButton>
        <LeftNavButton platform="ios" formFactor="handheld">
            <Button class="reportChooserButton" onClick="toggleReportChooserVisibility"/>
        </LeftNavButton>

        <RightNavButton platform="ios" formFactor="handheld">
            <Button class="reportConfiguratorButton" onClick="Alloy.toggleReportConfiguratorVisibility"/>
        </RightNavButton>
        <RightNavButton platform="mobileweb" formFactor="handheld">
            <Button class="reportConfiguratorButton" onClick="Alloy.toggleReportConfiguratorVisibility"/>
        </RightNavButton>

        <Require src="loading_indicator" id="loadingIndicator"/>
        
        <ScrollView id="content">
            <View class="reportContainer" dataCollection="piwikReports" dataFilter="filterReports" dataFunction="renderListOfReports">
                <Require src="report_overview" title="{name}"/>
                <View class="reportOverviewSeparator"/>
            </View>
            <ImageView class="footerLogo"/>
        </ScrollView>
    </Window>
</Alloy>