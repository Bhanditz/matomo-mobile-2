    <Collection src="appAccounts"/>
    
    <Window id="index" onOpen="onOpen" onClose="onClose">
        <ScrollView class="container">
            <View id="mainView">
                <View id="headerView">
                    <ImageView id="logoImage"/>
                </View>
                <View id="loginform" />
                <View class="footerSpacer" />
            </View>
            <View id="footerView">
                <Label id="tryit" class="footerLink" onClick="tryIt"/>
                <Label id="faq" class="footerLink" onClick="openFaq"/>
            </View>
        </ScrollView>
    </Window>
</Alloy>