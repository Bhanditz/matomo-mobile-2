<Alloy>
    <Collection src="piwikReports"/>

    <Window title="" id="index" onClose="onClose">
        
        <LeftNavButton platform="mobileweb" formFactor="handheld">
            <Button class="reportChooserButton" onClick="toggleReportChooserVisibility"/>
        </LeftNavButton>
        <LeftNavButton platform="ios" formFactor="handheld">
            <Button class="reportChooserButton" onClick="toggleReportChooserVisibility"/>
        </LeftNavButton>

        <RightNavButton platform="ios">
            <Button class="reportConfiguratorButton" onClick="toggleReportConfiguratorVisibility"/>
        </RightNavButton>
        <RightNavButton platform="mobileweb">
            <Button class="reportConfiguratorButton" onClick="toggleReportConfiguratorVisibility"/>
        </RightNavButton>

        <Menu id="menu" platform="android">
            <MenuItem id="menuItemWebsite" />
            <MenuItem id="menuItemRefresh" />
            <MenuItem id="menuItemAccount" />
            <MenuItem id="menuItemSetting" />
        </Menu>
        
        <ScrollView id="content" dataCollection="piwikReports" dataFilter="filterReports">
            <Require src="report_overview" title="{name}"/>
            <View class="reportOverviewSeparator"/>
        </ScrollView>
    </Window>
</Alloy>