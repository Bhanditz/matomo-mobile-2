".container": {
    layout: "vertical"
},

".splitWindow": {
    showMasterInPortrait: true
},

".container[platform=ios]": {
    separatorStyle: Ti.UI.iPhone.TableViewSeparatorStyle.NONE
},

"#loading": {
    height: Ti.UI.FILL,
    width: Ti.UI.FILL,
    visible: true
},

"#content": {
    height: Ti.UI.FILL,
    width: Ti.UI.FILL,
    visible: false
},

".menu": {
    layout: "vertical",
    height: Ti.UI.SIZE
},

".menuSeparatorShadow": {
    height: 8,
    backgroundImage: 'separator.png'
},

".menuSeparatorShadow[platform=android]": {
    height: '8dp',
    backgroundImage: '/separator.png'
},

"TableViewRow": {
    height: Ti.UI.SIZE
},

"TableViewRow[platform=ios]": {
    selectionStyle: Ti.UI.iPhone.TableViewCellSelectionStyle.NONE
},

".reportRowSeparator": {
     layout: "vertical"
},

".space": {
    height: 10
},

".space[platform=android]": {
    height: '10dp'
},

".shadow": {
    height: 4,
    backgroundImage: "separator2.png"
},

".shadow[platform=android]": {
    height: '4dp',
    backgroundImage: "/separator2.png"
}
