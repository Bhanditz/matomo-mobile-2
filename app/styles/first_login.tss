"#index[platform=ios]": {
    navBarHidden: true
},

"#index[platform=mobileweb]": {
    navBarHidden: true,
    modal: true
},

"#index[platform=android]": {
    exitOnClose: true
},

".container": {
    backgroundColor: "#ffffff",
    top: 0
},

"#mainView": {
    layout: 'vertical',
    height: Ti.UI.FILL,
    top: 0
},

"#headerView": {
    width: Ti.UI.FILL,
    top: 0,
    height: 180
},

"#headerView[platform=android]": {
    height: '180dp'
},

"#logoImage": {
    image: "/logo-png-page.png",
    width: 140,
    height: 51,
    zIndex: 1
},

"#logoImage[platform=mobileweb]": {
    image: "logo-png-page.png"
},

"#logoImage[platform=android]": {
    width: '140dp',
    height: '51dp',
},

"#loginform": {
    left: 20,
    right: 20,
    height: Ti.UI.SIZE
},

"#loginform[platform=android]": {
    left: '16dp',
    right: '16dp'
},

".footerSpacer": {
    height: 40,
},

".footerSpacer[platform=android]": {
    height: '40dp',
},

"#footerView": {
    bottom: 16,
    height: 40,
    width: Ti.UI.FILL
},

"#footerView[platform=android]": {
    bottom: '16dp',
    height: '40dp'
},

".footerLink": {
    bottom: 0,
    font: { 
        fontSize: 16,
        fontWeight: 'bold'
    }
},

".footerLink[platform=android]": {
    font: { 
        fontSize: '16sp',
        fontWeight: 'bold'
    }
},

"#tryit": {
    left: 10,
    textAlign: Ti.UI.TEXT_ALIGNMENT_LEFT,
    text: L('Mobile_TryIt')
},

"#tryit[platform=android]": {
    left: '16dp'
},

"#faq": {
    right: 10,
    textAlign: Ti.UI.TEXT_ALIGNMENT_RIGHT,
    text: L('General_Faq')
},

"#faq[platform=android]": {
    right: '16dp'
}
